root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml,yamlfmt}]
indent_style = space
indent_size = 2

[*.{js,ts,gs,jsx,tsx,vue}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.prisma]
indent_style = space
indent_size = 2

[*.ecrc]
indent_style = space
indent_size = 2

[*.{html,css,scss}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4
